#!/bin/bash

SALT="mysalt123"

current_path=$(pwd)
current_dir=$(basename "$current_path")

kebab_case=$(echo "$current_dir" \
  | sed 's/[ _]/-/g' \
  | tr '[:upper:]' '[:lower:]' \
  | sed 's/--*/-/g' \
  | sed 's/[^a-z0-9-]//g')

hash=$(echo "$SALT:$kebab_case" | sha1sum | cut -c1-6)

#surge . "$kebab_case-$hash.marienvanoverbeek.nl"
surge . "$kebab_case.marienvanoverbeek.nl"

echo "https://$kebab_case.marienvanoverbeek.nl/"